<?xml version="1.0" encoding="UTF-8"?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
  <parameters>
    <parameter key="libbit.framework.admin.user.class">Libbit\FrameworkBundle\Admin\UserAdmin</parameter>
    <parameter key="libbit.framework.admin.user.controller">LibbitFrameworkBundle:UserAdmin</parameter>
    <parameter key="libbit.framework.admin.user.entity">Libbit\FrameworkBundle\Entity\User</parameter>
    <parameter key="libbit.framework.admin.group.class">Libbit\FrameworkBundle\Admin\GroupAdmin</parameter>
    <parameter key="libbit.framework.admin.group.controller">LibbitFrameworkBundle:GroupAdmin</parameter>
    <parameter key="libbit.framework.admin.group.entity">Libbit\FrameworkBundle\Entity\Group</parameter>
    <parameter key="libbit.framework.admin.groupname">libbit_framework</parameter>
  </parameters>
  <services>
    <service id="libbit.framework.admin.user" class="%libbit.framework.admin.user.class%">
      <tag name="sonata.admin" manager_type="orm" group="%libbit.framework.admin.groupname%" label="users"/>
      <argument/>
      <argument>%libbit.framework.admin.user.entity%</argument>
      <argument>%libbit.framework.admin.user.controller%</argument>
      <call method="setUserManager">
        <argument type="service" id="fos_user.user_manager"/>
      </call>
    </service>
    <service id="libbit.framework.admin.group" class="%libbit.framework.admin.group.class%">
      <tag name="sonata.admin" manager_type="orm" group="%libbit.framework.admin.groupname%" label="groups"/>
      <argument/>
      <argument>%libbit.framework.admin.group.entity%</argument>
      <argument>%libbit.framework.admin.group.controller%</argument>
    </service>
  </services>
</container>
