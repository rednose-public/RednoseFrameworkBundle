{% extends 'RednoseFrameworkBundle::layout.html.twig' %}

{% block content %}
    <script>
        YUI_config.lang = 'nl-NL';

        YUI().use('rednose-form-designer', function (Y) {
            var formDesigner = new Y.Rednose.FormDesigner.FormDesigner({
                serverRouting: true,
                root         : '{{ path('sonata_admin_redirect') }}rednose/framework/form'
            });

            formDesigner.render();
        });
    </script>
{% endblock %}
