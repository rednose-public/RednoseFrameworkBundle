{# Environment parameters. This object should only contain CONSTANTS #}
{% set basePath = app.request.baseUrl|replace({'/app.php': ''})|replace({'/app_dev.php': ''})|replace({'/app_test.php': ''}) %}

{% set hostname = app.request.schemeAndHttpHost %}
{% set apiEndpoint = app.request.schemeAndHttpHost ~ app.request.baseUrl ~ '/api' %}
{% set appEndpoint = app.request.schemeAndHttpHost ~ app.request.baseUrl %}
{% set basePath = app.request.schemeAndHttpHost  ~ '/' ~  basePath %}

window.ENV = {
    hostname: '{{ hostname }}',
    apiEndpoint: '{{ apiEndpoint }}',
    appEndpoint: '{{ appEndpoint }}',
    basePath: '{{ basePath|trim('/') }}',
    locale: '{{ app.request.locale }}'
};
