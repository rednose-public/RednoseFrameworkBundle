{% extends 'RednoseFrameworkBundle::layout.html.twig' %}

{% block title %}{% trans %}sign_in_title{% endtrans %}{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/rednoseframework/css/login.css') }}" rel="stylesheet" />
{% endblock %}

{% block content %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">{% trans %}sign_in{% endtrans %}</h3>
                    </div>
                    <div class="panel-body">
                        <form accept-charset="UTF-8" role="form" action="{{ path('_rednose_framework_security_check') }}" method="POST">
                            {% if error %}
                                <div class="has-error">
                                    <span class="help-block">{{ error.message }}</span>
                                </div>
                            {% endif %}
                            <fieldset>
                                <div class="form-group">
                                    <input id="username" class="form-control" autofocus="autofocus" required="required" placeholder="{% trans %}sign_in_username{% endtrans %}" name="_username" type="text">
                                </div>
                                <div class="form-group">
                                    <input id="password" class="form-control" required="required" placeholder="{% trans %}sign_in_password{% endtrans %}" name="_password" type="password">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="_remember_me" type="checkbox"> {% trans %}remember_me{% endtrans %}
                                    </label>
                                </div>
                                <input id="submit" class="btn btn-lg btn-success btn-block" type="submit" name="_submit" value="{% trans %}sign_in_button{% endtrans %}">
                            </fieldset>
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
